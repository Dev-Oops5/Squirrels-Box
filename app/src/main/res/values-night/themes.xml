<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SquirrelsBox" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_orange_dark</item>
        <item name="colorPrimaryVariant">@color/primary_orange</item>
        <item name="colorOnPrimary">@color/primary_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_orange_dark</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/primary_orange_dark</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/primary_orange_dark</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/primary_orange</item>
    </style>
</resources>