<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".profile.navigation.home.HomeItemFragment"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/allItemsLy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Box name"
                android:textColor="@color/primary_orange_dark"
                android:textSize="24sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/lineDw1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="@color/primary_orange_dark" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/allItemsRv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:setHomeItemItems="@{viewModel.itemDataLiveData}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        </LinearLayout>

    </RelativeLayout>

    <data>
        <variable
            name="viewModel"
            type="com.miodemi.squirrelsbox.inventory.navigation.home.HomeItemViewModel" />
    </data>


</layout>